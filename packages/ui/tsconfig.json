{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react-jsx",
      "composite": true,            
      "declaration": true,          
      "declarationMap": true,       
      "lib": ["ES2015", "DOM"],
      "module": "ESNext",
      "target": "ES2015",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "moduleResolution": "node",
      "noEmit": false,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "references": [
      { "path": "../shared" }
    ]
  }
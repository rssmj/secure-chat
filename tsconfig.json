{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react-jsx",               
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "@secure-chat/*": ["packages/*/src"]
      }
    },
    "exclude": ["node_modules"]
  }